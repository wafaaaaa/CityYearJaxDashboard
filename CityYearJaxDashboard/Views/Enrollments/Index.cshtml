@model IEnumerable<CityYearJaxDashboard.Views.Shared.Enrollment>

@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <style>
        body {
            margin: 0;
        }
      h4 {
            list-style-type: none;  
            margin: 0;
            padding: 0;
            width: 35%;
            background-color: #f1f1f1;
            position: static;
            height: 70%;
            overflow: auto;
        }
    </style>
</head>
<body>
    <h1 style="font-size:30px; font-weight: bold; margin-left: 21%">Service Delivery</h1><br />
    <div class="container2" style="margin-left:21%; width:35%; position: static; height:100px;">
        <h4>Category</h4>
        <input type="checkbox" id="ela" value="ela"> ELA <br />
        <input type="checkbox" id="math" value="math"> Math<br />
        <input type="checkbox" id="attendance" value="attendance"> Attendance<br />
        <input type="checkbox" id="behavior" value="behavior"> Behavior<br />
        <br />
        <h4>Subcategory</h4>
        <input type="checkbox" id="enrollment" value="enrollment"> Enrollment<br />
        <input type="checkbox" id="dosage" value="dosage"> Dosage<br />
        <input type="checkbox" id="prevention" value="prevention"> Prevention<br />
        <input type="checkbox" id="growth"  value="growth"> Growth<br />
        <input type="checkbox" id="recovery" value="recovery"> Recovery<br />
        <br />
        <h4>Filter Goals</h4>
        <input type="checkbox" id="q1" value="q1"> Q1<br />
        <input type="checkbox" id="q1actual" value="q1actual"> Q1 Actual<br />
        <input type="checkbox" id="q2" value="q2"> Q2<br />
        <input type="checkbox" id="q2actual"  value="q2actual"> Q2 Actual<br />
        <input type="checkbox" id="q3"  value="q3"> Q3 <br />
        <input type="checkbox" id="q3actual"  value="q3actual"> Q3 Actual<br />
        <input type="checkbox" id="q4" value="q4">  Q4  <br />
        <input type="checkbox" id="q4actual" value="q4actual"> Q4 Actual<br />
        <input type="checkbox" id="bestofcy" value="bestofcy"> Best of City Year<br />
        <input type="checkbox" id="annual"  value="annual"> Annual <br />
    <br />
    <input type="reset" />
    <input type="button" value="Generate" onclick="" />
    </div>
    <div class="container3" style="margin-left:35%; height:100px;">
    <h2>Goals</h2>
    <p>
        @Html.ActionLink("Create New", "Enrollments")
    </p>
    <table class="table">
        <tr>
            <th>
                Q1 Goal
            </th>
            <th>
                Q1 Actual
            </th>
            <th>
                Q2 Goal
            </th>
            <th>
                Q2 Actual
            </th>
            <th>
                Q3 Goal
            </th>
            <th>
                Q3 Actual
            </th>
            <th>
                Q4 Goal
            </th>
            <th>
                Q4 Actual
            </th>
            <th>
                Best of CY Goal
            </th>
            <th>
                Annual Goal
            </th>

            <th></th>
        </tr>

       @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Q1Goal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q1Actual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q2Goal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q2Actual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q3Goal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q3Actual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q4Goal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q4Actual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnualGoal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BestofCYGoal)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Enrollment_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Enrollment_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Enrollment_ID })
                </td>
            </tr>
        }

    </table>
    </div>
</body>
</html>

